groups {
    PRIMARY_LSP {
      protocols {
          mpls {
              label-switched-path <*> {
                  optimize-timer 3600;
                  priority 0 0;
                  least-fill;
                  node-link-protection;
                  adaptive;
                  auto-bandwidth {
                      adjust-interval 600;
                      adjust-threshold 15;
                      minimum-bandwidth 10m;
                      maximum-bandwidth 1g;
                  }
              }
          }
      }
    }
    RSVP {
        protocols {
            rsvp {
                interface <*> {
                        link-protection;
                }
            }
        }
    }
}


interfaces {
	lo0 {
		unit 0 {
			family inet {
				address {{ host.loopback.ip }}/32;
                primary;
			}
			family iso {
				address {{ isis.systemid }};
			}
		}
	}
  ge-0/0/0 {
      description "default_vagrant_bridged";
      unit 0 {
          family inet {
              dhcp;
          }
      }
  }
{% for interface in interfaces %}
    {{ interface.name }} {
        unit 0 {
            description "{{interface.description }}";
            family inet {
                address {{ interface.ip }}/24;
            }
            {% if interface.protocols is defined %}
            {% for protocol in interface.protocols %}
            family {{ protocol }};
            {% endfor %}
            {% endif %}
        }
    }
{% endfor %}
}
protocols {
    lldp {
        interface all;
    }
}
vlans {
    default {
        vlan-id 1;
    }
}

protocols {
    bgp {
        group RR-CLIENTS {
            type internal;
            local-address {{ host.loopback.ip }};
            family inet {
                unicast;
            }
            multipath;
            mtu-discovery;
            cluster {{ host.loopback.ip }};
            {% for neighbor in bgp.neighbors %}
            neighbor {{ neighbor.peer_ip }} {
                description {{ neighbor.name }};
            }
            {% endfor %}
        }
    }       
	isis {
        level 1 disable;
        level 2 wide-metrics-only;
		{% for interface in interfaces %}
        interface {{ interface.name }} {
            point-to-point;
            level 1 disable;
        }
		{% endfor %}
    	interface lo0.0 {
    		level 1 disable;
    		passive;
    	}
        interface ge-0/0/0.0 {
            # vagrant_bridge
            disable;
        }
        interface ge-0/0/1.0 {
            # vboxnet0
            disable;
        }
    }
    rsvp {
      apply-groups RSVP;
    	{% for interface in interfaces %}
    	interface {{ interface.name }};
    	{% endfor %}
    }
    mpls {
    	interface lo0.0;
    	{% for interface in interfaces %}
    	interface {{ interface.name }};
        {% endfor %}
    }
}


routing-options {
    autonomous-system 65000;
    router-id {{ host.loopback.ip }};
    forwarding-table {
        export PFE-LB;
    }
}

policy-options {
    policy-statement PFE-LB {
        then {
            load-balance per-packet;
        }
    }
}

security {
    forwarding-options {
        family {
            mpls {
               mode packet-based;
            }
        }
    }
}
