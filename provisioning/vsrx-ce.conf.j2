        ssh-rsa "ssh-rsa  vagrant insecure public key";
    }
    login {
        user vagrant {
            uid 2000;
            class super-user;
            authentication {
                ssh-rsa "ssh-rsa  vagrant insecure public key";
            }
        }
        user barnesry {
            uid 2001;
            class super-user;
            authentication {
                ssh-rsa "ssh-rsa  barnesry@barnesry-mbp";
            }
        }
    }
    services {
        ssh {
            root-login allow;
        }
