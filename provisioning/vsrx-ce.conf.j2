            juniper {
                license-type juniper deployment-scope commercial;
            }
            chef {
                license-type juniper deployment-scope commercial;
            }
        }
    }
}


interfaces {
	lo0 {
		unit 0 {
			family inet {
				address {{ host.loopback.ip }}/32;
                primary;
			}
		}
	}
  ge-0/0/0 {
      description "default_vagrant_bridged";
      unit 0 {
          family inet {
              dhcp;
          }
      }
  }
{% for interface in interfaces -%}
    {{ interface.name }} {
        {% if interface.vlans is defined -%}
        vlan-tagging;
        {% for vlan in interface.vlans -%}
        unit {{ vlan.id }} {
            description "{{ vlan.description }}";
            vlan-id {{ vlan.id }};
            family inet {
                address {{ vlan.ip }}/24;
            }
        }
        {% endfor %}
        {% else -%}
        unit 0 {
            description "{{interface.description }}";
            family inet {
                address {{ interface.ip }}/24;
            }
        }
        {% endif %}
    }
{% endfor %}
}
protocols {
    lldp {
        interface all;
    }
}
vlans {
    default {
        vlan-id 1;
    }
}


routing-options {
    router-id {{ host.loopback.ip }};
    forwarding-table {
        export PFE-LB;
    }
}

policy-options {
    policy-statement PFE-LB {
        then {
            load-balance per-packet;
        }
    }
}

{% if instances is defined %}
routing-instances {
    {% for instance in instances %}
    {{ instance.name }} {
        instance-type {{ instance.type }};
        {% for interface in instance.interfaces %}
        interface {{ interface.name }};
        {% endfor %}
        routing-options {
            static {
                {% for route in instance.routes %}
                route {{ route.prefix }} next-hop {{ route.nexthop }};
                {% endfor %}
            }
        }
    }
    {% endfor %}
}
{% endif %}

security {
    forwarding-options {
        family {
            mpls {
               mode packet-based;
            }
        }
    }
}
